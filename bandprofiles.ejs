<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Band Profiles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="bandprofiles.css">
    <!-- Font Awesome CDN for social media icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  </head>
  <body>
    <!-- Header Section -->
    <header class="p-3 mb-3 border-bottom" style="background-color: black; color: white;">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-between">
          <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
            <img src="/SEMITONE_LOGO.gif" alt="Logo" width="120">
          </a>
          <div class="break" style="color: black;">
            <t>
              heqfwehjv rhgwefq gvwenqwbefqwjhvhgwegfvwqghfvwghvfwdgKGFVdwhgfsfeseqa
            </t>
          </div>
    
          <form action="/search" method="GET" class="d-flex" role="search">
            <input type="search" name="query" class="form-control me-2" placeholder="Search..." aria-label="Search" required>
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
        </div>
      </div>
    </header>
    

    <!-- Profiles Section -->
    <div class="container">
      <h2 class="text-center my-4">Band Profiles</h2>
      <div class="row">
        <div class="list-group w-100">
          <% bands.forEach(band => { %>
          <!-- Individual Band Profile -->
          <div class="list-group-item d-flex align-items-center mb-3">
            <img src="/uploads/images/<%= band.profile_picture || 'default-artist.jpg' %>" 
                 alt="<%= band.name %>" class="img-thumbnail mr-3" style="width: 100px; height: 100px;">
            <div>
              <h5 class="mb-1"><%= band.name %></h5>
              <p class="mb-1"><strong>Genre:</strong> <%= band.genre %></p>
              <p class="mb-1"><strong>Members:</strong> <%= band.members %></p>
              <p class="mb-1"><strong>Location:</strong> Bangalore</p>
              <p class="mb-1"><%= band.description || 'No description available.' %></p>
              <a href="/band/<%= band.id %>" class="btn btn-primary mt-2">Go to Profile</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    
    <div class="container">
      <h2 class="text-center my-4">Band Profiles</h2>
      <div class="row">
        <div class="list-group w-100">
          <% bands.forEach(band => { %>
          <!-- Individual Band Profile -->
          <div class="list-group-item d-flex align-items-center mb-3">
            <img src="kaushik.jpg " 
                 alt="<%= band.name %>" class="img-thumbnail mr-3" style="width: 150px; height: 150px;">
            <div>
              <h5 class="mb-1"><%= band.name %></h5>
              <p class="mb-1"><strong>Genre:</strong> <%= band.genre %></p>
              <p class="mb-1"><strong>Members:</strong> <%= band.members %></p>
              <p class="mb-1"><strong>Location:</strong> Bangalore</p>
              <p class="mb-1"><%= band.description || 'No description available.' %></p>
              <a href="/band/<%= band.id %>" class="btn btn-primary mt-2">Go to Profile</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    
    
    <!-- Footer Section -->
    <footer class="bg-dark text-white py-4 mt-5">
      <div class="container text-center">
        <p>&copy; 2024 Semitones. All rights reserved.</p>
        <ul class="nav justify-content-center">
          <li class="nav-item"><a href="#" class="nav-link text-white"><i class="fab fa-facebook"></i></a></li>
          <li class="nav-item"><a href="#" class="nav-link text-white"><i class="fab fa-twitter"></i></a></li>
          <li class="nav-item"><a href="#" class="nav-link text-white"><i class="fab fa-instagram"></i></a></li>
        </ul>
      </div>
    </footer>
  </body>
</html>
