<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Live Events</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="p-3 mb-3 border-bottom" style="background-color: black; color: white;">
        <div class="container">
          <div class="d-flex flex-wrap align-items-center justify-content-between">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
              <img src="/SEMITONE_LOGO.gif" alt="MusicHub Logo" width="120">
            </a>
            
            <form class="col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
              <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
            </form>
            
          </div>
        </div>
      </header>
    <div class="container mt-4">
        <h1>Live Events</h1>

        <!-- Add Event Button (Visible to Authorized Users Only) -->
        <% if (user) { %>
            <div class="mb-4">
                <a href="/add-event" class="btn btn-success">Add Event</a>
            </div>
        <% } else { %>
            <p class="text-muted">You must be logged in to add an event.</p>
        <% } %>
        
        

        <!-- Dynamic Cards Section -->
        <div class="row g-3">
            <% if (events.length > 0) { %>
                <% events.forEach(event => { %>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="/uploads/images/<%= event.image %>" class="card-img-top" alt="Event Image">
                        <div class="card-body">
                            <h5 class="card-title"><%= event.title %></h5>
                            <p class="card-text"><%= event.description %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center text-muted">No events available at the moment. Add one using the form above.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
